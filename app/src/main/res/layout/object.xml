<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context="com.example.propertycatalog.ObjectInfo"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="397dp"
        android:layout_height="293dp"
        android:layout_marginBottom="24dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:text="Площадь __________________________________"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#202020"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="401dp" />

    <TextView
        android:id="@+id/square"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="224dp"
        tools:layout_editor_absoluteY="401dp" />

    <TextView
        android:id="@+id/rooms"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintTop_toBottomOf="@+id/square"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="224dp" />

    <TextView
        android:id="@+id/floor"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintTop_toBottomOf="@+id/rooms"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="224dp" />

    <TextView
        android:id="@+id/addres"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintTop_toBottomOf="@+id/floor"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="224dp" />

    <TextView
        android:id="@+id/priceForSqM"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintTop_toBottomOf="@+id/addres"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="224dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Адрес   ____________________________________"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#202020"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Этаж ______________________________________"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#202020"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Кол-во комнат ____________________________"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#202020"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Цена за кв.м.  _____________________________"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#202020"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <include
        layout="@layout/bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="84dp"
        tools:srcCompat="#DADADA" />

    <TextView
        android:id="@+id/price"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:text="Цена"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#424242"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp" />

    <Button
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>